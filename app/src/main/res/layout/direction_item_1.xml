<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content"
    android:background = "@color/grey_5"
    android:paddingStart = "10dp"
    android:paddingTop = "10dp"
    android:paddingEnd = "10dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id = "@+id/direction_number"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:background = "@drawable/circle_outline_red"
        android:gravity = "center"
        android:text = "1"
        android:textColor = "@color/orange_600"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id = "@+id/text_title_direction_1"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_toEndOf = "@id/direction_number"
        android:layout_toRightOf = "@id/direction_number"
        android:paddingStart = "16dp"
        android:paddingEnd = "16dp"
        android:text = "Eiffel Tower"
        android:textSize = "14sp"
        android:textStyle = "bold"
        app:layout_constraintStart_toEndOf = "@id/direction_number"
        app:layout_constraintTop_toTopOf = "parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id = "@+id/text_description"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:layout_below = "@id/text_title_direction_1"
        android:layout_marginTop = "8dp"
        android:layout_marginBottom = "16dp"
        android:layout_toEndOf = "@id/direction_number"
        android:layout_toRightOf = "@id/direction_number"
        android:drawableStart = "@drawable/ic_access_time"
        android:drawableLeft = "@drawable/ic_access_time"
        android:drawablePadding = "10dp"
        android:paddingStart = "16dp"
        android:paddingEnd = "16dp"
        android:text = "Visitors typically stay 45 min"
        android:textSize = "14sp"
        app:layout_constraintBottom_toTopOf = "@id/barrier"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toEndOf = "@id/direction_number"
        app:layout_constraintTop_toBottomOf = "@id/text_title_direction_1" />

    <androidx.constraintlayout.widget.Barrier
        android:id = "@+id/barrier"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:barrierDirection = "bottom"
        app:constraint_referenced_ids = "text_description" />

    <View
        android:layout_width = "1dp"
        android:layout_height = "0dp"
        android:layout_below = "@id/direction_number"
        android:layout_centerHorizontal = "true"
        android:background = "@color/grey_40"
        app:layout_constraintBottom_toTopOf = "@id/barrier"
        app:layout_constraintEnd_toStartOf = "@id/text_description"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@id/direction_number" />

</androidx.constraintlayout.widget.ConstraintLayout>